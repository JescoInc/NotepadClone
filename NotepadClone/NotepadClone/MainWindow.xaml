<Window x:Class="NotepadClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NotePad Clone" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" >
            <MenuItem Header="File" Name="MenuFile">
                <MenuItem Header="Load" Name="MenuFileLoad" HorizontalAlignment="Center" Click="MenuFileLoad_Click"/>
                <MenuItem Header="Save" Name="MenuFileSave" HorizontalAlignment="Center" Click="MenuFileSave_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Name="MenuFileExit" Click="MenuFileExit_Click" />
            </MenuItem>
        </Menu>
        <TextBox Name="TxtBox" Grid.Row="1" TextWrapping="Wrap" Text="" Margin="3,3,3,3" SpellCheck.IsEnabled="True" IsManipulationEnabled="True" IsTabStop="False" AllowDrop="False" ClipToBounds="True" AcceptsReturn="True" AcceptsTab="True" Grid.RowSpan="2" />
    </Grid>
</Window>